# ABHAYA Environment Variables
# IMPORTANT: Copy this file to .env and fill in your actual values

# ============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Your Supabase project URL (format: https://xxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Your Supabase anon/public key (starts with eyJ, 300+ characters)
# This is a JWT token, NOT sb_publishable_xxx
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-long-key-here

# Your Supabase service role key (optional, for admin operations)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key

# ============================================================================
# GOOGLE MAPS API (Required for location features)
# ============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================================================
# OPTIONAL APIS
# ============================================================================

# Weather API (for weather widget)
NEXT_PUBLIC_WEATHER_API_KEY=your_weather_api_key

# YouTube API (for safety videos)
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key

# ============================================================================
# APP CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================================================
# LEGACY (can be removed after migration)
# ============================================================================
MONGODB_URI=
SESSION_SECRET=development-secret-key-should-be-at-least-32-chars-long
